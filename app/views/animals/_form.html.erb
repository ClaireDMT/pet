<div class="container mt-5">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for animal do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :species, collection: Animal::SPECIES %>
        <%= f.input :found_on %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
